/*  */
page {
  background: #fafaf8;
}

.bgImgae {
  position: relative;
  width:750rpx;
  height: 360rpx;
  background-color: #f6623a;
}
.swiper{
  width: 700rpx;
  height: 320rpx;
  margin: 0 auto;
  border-radius: 50rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}
.swiper image {
  width: 700rpx;
  height: 320rpx;
  border-radius: 50rpx;
  margin-bottom: 30rpx;
}

.search {
  width: 100%;
  height: 40px;
  /* background: rgb(244,96,56); */
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 15px;
}

.search_view {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 70%;
  height: 35px;
  border-radius: 20px;
  background: #fff;
}

.search input {
  width: 82%;
  height: 38px;
  /* border: 1px solid  #ccc; */
}

.search text {
  color: #f00;
  font-weight: 700;
  margin-left:10rpx;
}
.item_box {
  display: flex;
  width: 750rpx;
  justify-content: center;
  position: absolute;
  bottom: -8rpx;
}
.sel_item {
  width: 90rpx;
  height: 10rpx;
  text-align: center;
  line-height: 10rpx;
  background-color: rgb(209, 212, 211);
  border-radius: 20%;
  margin: 20rpx;
}

.active {
  background-color: rgb(255, 196, 0);
}

/* 分类导航 */
.sort-menu {
  width: 100%;
  height: 90px;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}


.sort-menu image {
  width: 30px;
  height: 30px;
}

.sort-menu text {
  font-size: 12px;
}

.sort-menu .menu-list {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 热门菜谱 */

.hot-recipe {
  background: #fff;
}

/* 热门菜谱列表大盒子 */
.hot-recipe-lists {
  padding: 5px 0px;
  display: flex;
  flex-wrap: wrap;
}

/* 热门菜谱列表 */
.hotlist {
  width: 48%;
  height: 560rpx;
  /* border: 1px solid red; */
  border-radius: 10px;
  float: left;
  margin: 1%;
  background: #fff;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

.recipeimage {
  height: 370rpx;
  width: 100%;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.hotlist_info {
  padding: 1px 10px;
}

.recipename {
  font-size: 17px;
  font-weight: bolder
}

.usernameimage {
  width: 22px;
  height: 22px;
  border-radius: 50%;
}

.hotimage {
  width: 22px;
  height: 22px;
}

.dedailinfo {
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dedailinfo view {
  display: flex;
  justify-content: center;
  align-items: center;
}

.dedailinfo text {
  font-size: 15px;
  color: #bbb;
  margin-left: 3px;
}